<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/itemMovies_imageView_poster"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemMovies_textView_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/sen_regular"
        tools:text="Titulo"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/itemMovies_imageView_poster"
        app:layout_constraintEnd_toStartOf="@+id/itemMovies_imageView_checkable"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toEndOf="@+id/itemMovies_imageView_poster"
        app:layout_constraintTop_toTopOf="@+id/itemMovies_imageView_poster"
        app:layout_constraintVertical_bias="0.30" />

    <TextView
        android:id="@+id/itemMovies_textView_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/sen_regular"
        tools:text="2002 Aventura, Ação"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/itemMovies_textView_title"
        app:layout_constraintStart_toStartOf="@+id/itemMovies_textView_title"
        app:layout_constraintTop_toBottomOf="@+id/itemMovies_textView_title" />

    <ImageView
        android:id="@+id/itemMovies_imageView_checkable"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_circle_white_24dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.2dp"
        android:background="#494848"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemMovies_textView_subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>